{% block header %}
<img src="{{ asset('images/mytaskssecure.png') }}" alt="logo">
<nav>
{% if connected %}
<ul>
        <ul>
            <li><a class="{{ page == "home" ? "bold" : "" }}" href='/home'>Home</a></li>
            <li><a class="{{ page == "tasks" ? "bold" : "" }}" href='/tasks'>Tasks</a></li>
            {% if (app.user) %}
            <li><a class="{{ page == "account" ? "bold" : "" }}" href='/account'>{{ app.user.username }}</a> <img id="profilePicNav" src='{{ app.user.image | default('') }}' alt='Profile picture'></li>
            {% else %}
            <li><a href='/login'>Login</a></li>
            {% endif %}
        </ul>
</ul>
{% else %}
<ul>
    <li>
        <a href="\register">Register</a>
    </li>
    <li>
        <a href="\login">Login</a>
    </li>
</ul>
{% endif %}
</nav>
{% endblock %}
